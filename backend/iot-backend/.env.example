# ===========================================
# IoT Device Manager - Backend Configuration
# ===========================================
# Copy this file to .env and update the values

# Server
PORT=4000
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL="postgresql://iot_user:your_password@localhost:5432/iot_devices"

# Redis (optional - for caching and real-time)
REDIS_URL="redis://localhost:6379"
# Or with password:
# REDIS_URL="redis://:your_redis_password@localhost:6379"

# JWT Authentication
JWT_SECRET="change-this-to-a-very-long-random-string-at-least-32-characters"
JWT_EXPIRES_IN="7d"

# MQTT Broker
MQTT_BROKER_URL="mqtt://localhost:1883"
MQTT_USERNAME="iot_backend"
MQTT_PASSWORD="your_mqtt_password"

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173"
